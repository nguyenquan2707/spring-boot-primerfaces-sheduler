<configuration>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date %level %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>
    <!--
           COMMON
     -->
    <root level="DEBUG">
        <appender-ref ref="console"/>
    </root>
</configuration>
