<?xml version="1.0" encoding="UTF-8"?>
<!--           Iakov Senatov.07.2021                                -->
<configuration>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date %level %logger{15} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>
    <!--
           COMMON
     -->
    <root level="ERROR">
        <appender-ref ref="console"/>
    </root>
    <!--
            LOGGERS
     -->
    <logger name="com.sun.faces" additivity="false" level="DEBUG">
        <appender-ref ref="console"/>
    </logger>
    <logger name="javax.el" additivity="false" level="DEBUG">
        <appender-ref ref="console"/>
    </logger>
    <logger name="org.primefaces" additivity="false" level="DEBUG">
        <appender-ref ref="console"/>
    </logger>
    <logger name="org.springframework" additivity="false" level="WARN">
        <appender-ref ref="console"/>
    </logger>
    <logger name="org.hibernate" additivity="false" level="WARN">
        <appender-ref ref="console"/>
    </logger>
    <logger name="com.zaxxer.hikari.pool" additivity="false" level="WARN">
        <appender-ref ref="console"/>
    </logger>
    <logger name="de.senatov.reservatio"  additivity="false" level="DEBUG">
        <appender-ref ref="console"/>
    </logger>
</configuration>
